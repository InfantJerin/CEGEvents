<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/rel"
    tools:context=".EventDetailsActivity" >

    <TextView
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:hint="Event Name Here"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/eventDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eventName"
        android:layout_below="@+id/eventName"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="51dp"
        android:hint="Event desc here"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/eventCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eventDesc"
        android:layout_below="@+id/eventName"
        android:hint="Category Name Here"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/eventVenue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/venueTag"
        android:layout_alignRight="@+id/eventCategory"
        android:hint="Venue Here"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/venueTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startsTag"
        android:layout_below="@+id/eventDesc"
        android:layout_marginTop="30dp"
        android:text="Venue:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/startsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/eventName"
        android:layout_below="@+id/eventVenue"
        android:layout_marginTop="20dp"
        android:text="Starts:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/eventStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/startsTag"
        android:layout_alignLeft="@+id/eventVenue"
        android:hint="StartDate" />

    <TextView
        android:id="@+id/eventStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/startsTag"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/eventStartDate"
        android:hint="StartTime" />

    <TextView
        android:id="@+id/EndsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/startsTag"
        android:layout_below="@+id/startsTag"
        android:layout_marginTop="20dp"
        android:text="Ends:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/eventEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/EndsTag"
        android:layout_alignLeft="@+id/eventStartDate"
        android:hint="EndDate" />

    <TextView
        android:id="@+id/eventEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/EndsTag"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/eventEndDate"
        android:hint="EndTime" />

    <Switch
        android:id="@+id/reminderSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/EndsTag"
        android:layout_below="@+id/EndsTag"
        android:layout_marginTop="40dp"
        android:text="Reminder" />

</RelativeLayout>